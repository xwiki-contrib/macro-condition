    <property>
      <code>{{velocity output="false" }}
#set($macroContent = $xcontext.macro.content)
#set($rightsStr = $xcontext.macro.params.rights)
#set($reference = $xcontext.macro.params.reference)
#set($securityService = $services.security.authorization)
#set($conditionVerified = true)
#if ("$!rightsStr" != '')
   #set($rights = $rightsStr.split(","))
   #foreach ($p in $rights)
      #set($perm = $p.trim())
      #if ("$!reference" != '')
         #if (!$securityService.hasAccess($perm, $reference))
            #set($conditionVerified = false)
         #end
      #else
         #if (!$securityService.hasAccess($perm))
            #set($conditionVerified = false)
         #end
      #end
   #end
#end
#if ($conditionVerified)
   ## parse the content and return the resulting blocks
   #set($xcontext.macro.result = $services.rendering.parse($macroContent, $xwiki.getCurrentContentSyntaxId()).getChildren())
#end
{{/velocity}}</code>
